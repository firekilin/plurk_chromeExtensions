{
  "name": "plurk_chromeExtension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "有趣就做",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "plurk_chromeExtension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/image16.png",
      "32": "images/image32.png",
      "48": "images/image48.png",
      "128": "images/image128.png"
    }
  },
  "icons": {
    "16": "images/image16.png",
    "32": "images/image32.png",
    "48": "images/image48.png",
    "128": "images/image128.png"
  },

  "host_permissions": [
    "https://www.plurk.com/*"
  ]
}